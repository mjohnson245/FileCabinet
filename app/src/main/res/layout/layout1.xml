<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pathOutput"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black"
            android:gravity="center"
            android:rotationX="0"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <Button
            android:id="@+id/refresh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_baseline_refresh_24"
            android:drawableTint="@color/white"
            app:backgroundTint="#2196F3"
            app:cornerRadius="60dp" />

        <Button
            android:id="@+id/goBack"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_baseline_arrow_back_24"
            android:drawableTint="@color/white"
            android:text="Back"
            app:backgroundTint="#2196F3"
            app:cornerRadius="60dp" />


        <Button
            android:id="@+id/newFolder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_baseline_create_new_folder_24"
            android:drawableTint="@color/white"
            android:text="NF"
            app:backgroundTint="#2196F3"
            app:cornerRadius="60dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/fListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/bottombar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:text="Del"
            android:id="@+id/button1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:backgroundTint="#2196F3"
            />

        <Button
            android:visibility="gone"
            android:id="@+id/rename"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="rename"
            app:backgroundTint="#2196F3"
            />
        <Button
            android:visibility="gone"
            android:id="@+id/copy"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Copy"
            app:backgroundTint="#2196F3"
            />
        <Button
            android:visibility="gone"
            android:id="@+id/paste"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Paste"
            app:backgroundTint="#2196F3"
            />
    </LinearLayout>
</LinearLayout>